        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #e5e7eb;
    }

    .btn-logout {
        width: 100%;
        display: flex;
        gap: 0.75rem;
        padding: 0.7rem;
        background: transparent;
        border: 1px solid transparent;
        color: #4b5563;
        border-radius: 8px;
        cursor: pointer;
        border: 1px solid var(--sidebar-border);
        transition: all 0.2s;
    }

        .btn-logout:hover {
            background-color: var(--hover-bg);
            color: #111827; /* Red Text */
            border-color: #111827;
        }

    /* -------------------------------------------
                RESPONSIVE STYLES (Mobile)
            ------------------------------------------- */
    @@media (max-width: 768px) {
        .page

    {
        flex-direction: column;
    }

    .desktop-toggle {
        display: none;
    }

    .mobile-toggle {
        display: flex;
    }

    /* Sidebar Overlay */
    .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100vh;
        width: var(--sidebar-width-expanded);
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
        box-shadow: 4px 0 15px rgba(0,0,0,0.1);
    }

    /* Expanded on Mobile = Slide In */
    .page.sidebar-expanded .sidebar {
        transform: translateX(0);
    }

    /* Collapsed on Mobile = Hidden */
    .page.sidebar-collapsed .sidebar {
        transform: translateX(-100%);
    }

    /* Force show contents on mobile */
    .sidebar-text, .brand-text {
        display: block !important;
        opacity: 1 !important;
    }

    .sidebar-header {
        justify-content: space-between !important;
        padding: 0 1.5rem !important;
    }

    .nav-item, .user-info, .btn-logout {
        justify-content: flex-start !important;
        padding-left: 1rem !important;
    }

    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0,0,0,0.5);
        z-index: 90;
        backdrop-filter: blur(2px);
    }

    .page.sidebar-expanded .sidebar-overlay {
        display: block;
    }

    main {
        padding-top: 60px;
    }

    }
</style>