    .sidebar {
        background-color: var(--sidebar-bg);
        border-right: 1px solid var(--sidebar-border); /* Separator line */
        color: var(--text-color);
        display: flex;
        flex-direction: column;
        z-index: 100;
        transition: width var(--transition-speed) ease-in-out;
        overflow: hidden;
        flex-shrink: 0; /* Ensures sidebar doesn't shrink when content is wide */
