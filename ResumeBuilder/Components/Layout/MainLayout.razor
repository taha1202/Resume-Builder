        --active-bg: #eff6ff; /* Very light blue */

        --transition-speed: 0.3s;
    }

    .page {
        position: relative;
        display: flex;
        height: 100vh;
        overflow: hidden;
        background-color: #f9fafb; /* Main background slightly off-white */
    }

    main {
        flex: 1; /* Takes remaining space */
        min-width: 0; /* Prevents flex items from overflowing */
        overflow-y: auto;
        position: relative;
        display: flex;
        flex-direction: column;
        transition: margin-left var(--transition-speed) ease-in-out;
    }

    article.content {
        padding: 2rem !important;
        max-width: 100% !important;
        width: 100%;
        margin: 0 !important;
    }

    /* -------------------------------------------
                SIDEBAR STYLES
