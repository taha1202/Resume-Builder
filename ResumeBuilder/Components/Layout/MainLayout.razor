                </NavLink>
            </nav>

            <div class="sidebar-footer">
                <div class="user-info" @onclick="GoToProfile">
                    @if (!string.IsNullOrEmpty(AuthService.CurrentUser?.ProfileImageUrl))
                    {
                        <img src="@AuthService.CurrentUser.ProfileImageUrl" alt="Profile" class="user-avatar-image" />
                    }
                    else
                    {
                        <div class="user-avatar">@GetUserInitials()</div>
                    }
                    <span class="sidebar-text user-name">@AuthService.CurrentUser?.Name</span>
                </div>
                <button class="btn-logout" @onclick="Logout">
                    <span class="nav-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                    </span>
                    <span class="sidebar-text">Logout</span>
                </button>
            </div>
        </aside>

        <div class="sidebar-overlay" @onclick="ToggleSidebar"></div>
    }

    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isSidebarExpanded = true;
    private bool _hasInitialized = false;


    private void ToggleSidebar() => isSidebarExpanded = !isSidebarExpanded;
    
    protected override async Task OnInitializedAsync()
    {
        // Subscribe to auth state changes to update UI when profile changes
        AuthService.OnAuthStateChanged += StateHasChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_hasInitialized)
        {
            _hasInitialized = true;
            
            // Initialize auth after the component has rendered
            await AuthService.InitializeAsync();
            
            Console.WriteLine("token = " + AuthService.AuthToken);
            
            // Force a re-render to update the UI with user data
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= StateHasChanged;
    }
    
    private void GoToProfile()
    {
        Navigation.NavigateTo("/profile");
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        Navigation.NavigateTo("/");
    }

    private string GetUserInitials()
    {
        var name = AuthService.CurrentUser?.Name ?? "";
        if (string.IsNullOrWhiteSpace(name)) return "U";
        var parts = name.Trim().Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2) return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name[0].ToString().ToUpper();
    }

}

