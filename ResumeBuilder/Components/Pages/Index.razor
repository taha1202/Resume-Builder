@page "/"
@layout EmptyLayout
@inject AuthService AuthService

<PageTitle>ResumeCloud - Build Your Professional Resume</PageTitle>

<div class="landing-page">
    <div class="animated-bg">
        <div class="bg-circle circle-1"></div>
        <div class="bg-circle circle-2"></div>
        <div class="bg-circle circle-3"></div>
    </div>
    
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-brand">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="brand-icon">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <span class="brand-name">ResumeCloud</span>
            </div>
            <div class="nav-actions">
                <a href="/login" class="nav-link">Sign In</a>
                <a href="/signup" class="btn-nav-primary">Get Started</a>
            </div>
        </div>
    </nav>

    <div class="hero-section">
        <div class="hero-content">
          
            <h1 class="hero-title">
                Build Your
                <span class="gradient-text">Professional Resume</span>
                in Minutes
            </h1>
            <p class="hero-description">
                Create stunning, ATS-friendly resumes with our modern builder. Choose from professional templates, 
                customize every detail, and download instantly. Your career success starts here.
            </p>
            <div class="hero-buttons">
                <a href="/signup" class="btn-hero-primary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14 2 14 8 20 8"></polyline>
                    </svg>
                    Create Your Resume
                </a>
            </div>
            <div class="trust-badges">
                <div class="trust-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#10B981" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                    <span>100% Free</span>
                </div>
                <div class="trust-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#10B981" stroke-width="2">
                        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                    </svg>
                    <span>Secure & Private</span>
                </div>
                <div class="trust-item">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#10B981" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span>10k+ Users</span>
                </div>
            </div>
        </div>

        <div class="features-grid" id="features">
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="3" y1="9" x2="21" y2="9"></line>
                        <line x1="9" y1="21" x2="9" y2="9"></line>
                    </svg>
                </div>
                <h3>Professional Templates</h3>
                <p>Choose from 6+ beautifully designed templates. From modern to creative, find the perfect style for your industry.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path>
                    </svg>
                </div>
                <h3>Cloud Storage</h3>
                <p>All your resumes securely stored in Azure cloud. Access from any device, anytime, anywhere.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                </div>
                <h3>Export to PDF</h3>
                <p>Download your resume as a high-quality PDF with one click. Ready for job applications immediately.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="16 18 22 12 16 6"></polyline>
                        <polyline points="8 6 2 12 8 18"></polyline>
                    </svg>
                </div>
                <h3>ATS-Friendly</h3>
                <p>All templates are optimized for Applicant Tracking Systems to maximize your interview chances.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                        <line x1="8" y1="21" x2="16" y2="21"></line>
                        <line x1="12" y1="17" x2="12" y2="21"></line>
                    </svg>
                </div>
                <h3>Live Preview</h3>
                <p>See changes in real-time as you edit. What you see is exactly what you get in the final PDF.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                        <line x1="7" y1="7" x2="7.01" y2="7"></line>
                    </svg>
                </div>
                <h3>Multiple Formats</h3>
                <p>Save multiple versions of your resume tailored for different job applications.</p>
            </div>
        </div>
    </div>

    <footer class="landing-footer">
        <p>© 2025 ResumeCloud. Built with ❤️ for job seekers worldwide.</p>
    </footer>
</div>