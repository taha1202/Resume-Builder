        from {
            transform: translateX(100%);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .alert-error {
        background: #fef2f2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .alert-success {
        background: #f0fdf4;
        color: #166534;
        border: 1px solid #bbf7d0;
    }

    @@media (max-width: 768px) {
        .profile-container {
            padding: 1rem;
        }

        .profile-grid {
            grid-template-columns: 1fr;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .alert {
            left: 1rem;
            right: 1rem;
            bottom: 1rem;
        }
    }
</style>
